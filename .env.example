# Public URL, used for OG Image when running nuxt generate
NUXT_PUBLIC_SITE_URL=

# GitHub OAuth (required for Drive / Iskra login)
# Create an OAuth App at https://github.com/settings/developers -> New OAuth App
# Authorization callback URL: http://localhost:3000/auth/github (dev) or https://your-domain.com/auth/github (prod)
NUXT_OAUTH_GITHUB_CLIENT_ID=your_client_id_here
NUXT_OAUTH_GITHUB_CLIENT_SECRET= your_client_secret_here
